{% extends 'app.twig' %}

{% block content %}

<div id="email-cont" class="container-fluid">
  <div class="page-header text-center">
    <p>Use your e-mail or username to sign in.</p>
  </div>
  <div class="row">
    <div class".col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading"><span class="glyphicon glyphicon-log-in"></span> Sign in with Email/Username</div>
          <div class="panel-body">
            <form action="{{ path_for('auth.signin') }}" method="post" autocomplete="off">
              <div class="form-group{{ errors.auth ? ' has-error' : ''}}">
                <label for="auth"><span class="glyphicon glyphicon-sunglasses"></span> Email</label>
                <input type="auth" name="auth" id="auth" placeholder="you@domain.com/harambe" class="form-control" value="{{ old.auth }}">
                {% if errors.auth %}
                  <span class="help-block">{{ errors.auth | first }}</span>
                {% endif %}
              </div>
              <div class="form-group{{ errors.password ? ' has-error' : ''}}">
                <label for="password"><span class="glyphicon glyphicon-lock"></span> Password</label>
                <input type="password" name="password" id="password" class="form-control">
                {% if errors.password %}
                  <span class="help-block" >{{ errors.password | first }}</span>
                {% endif %}
              </div>
              <button type="submit" class="btn btn-default">Submit</button>
              {{ csrf.field | raw }}
            </form>
        </div>
      </div>
      <a href="{{ path_for('auth.reset') }}" class="btn-link btn-info" role="button">Reset Account.</a>
      <a href="{{ path_for('oauth.google.signin') }}" title="Google+" class="btn btn-googleplus btn-lg"><i class="fa fa-google-plus fa-fw"></i></a>
      <a href="{{ path_for('oauth.42.signin') }}" title="42" class="btn btn-lg">42</a>
    </div>
  </div>
</div>

{% endblock %}
