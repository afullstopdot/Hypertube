{% extends 'app.twig' %}

{% block content %}

<div id="email-cont" class="container-fluid">
  <div class="page-header text-center">
    <h2>A valid e-mail is required.</h2>
  </div>
  <div class="row">
    <div class".col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading"><span class="glyphicon glyphicon-log-in"></span> Sign in with Email/Username</div>
          <div class="panel-body">
            <form action="{{ path_for('auth.reset') }}" method="post" autocomplete="off">
              <div class="form-group{{ errors.email ? ' has-error' : ''}}">
                <label for="email"><span class="glyphicon glyphicon-sunglasses"></span> Email</label>
                <input type="email" name="email" id="email" placeholder="you@domain.com" class="form-control" value="{{ old.email }}">
                {% if errors.email %}
                  <span class="help-block">{{ errors.email | first }}</span>
                {% endif %}
              </div>
              <button type="submit" class="btn btn-default">Submit</button>
              {{ csrf.field | raw }}
            </form>
        </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}
